{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "default_locale": "en_US",
  "version": "0.2",
  "author": "Firefox",
  "applications": {
    "gecko": {
      "id": "secure-proxy@mozilla.com",
      "strict_min_version": "68.0"
    }
  },

  "description": "__MSG_extensionDescription__",
  "browser_action": {
    "browser_style": true,
    "default_icon": "img/badge_off.svg",
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup.html"
  },

  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "incognito": "spanning",

  "permissions": [
      "<all_urls>",
      "identity",
      "management",
      "privacy",
      "proxy",
      "storage",
      "tabs",
      "webRequest",
      "webRequestBlocking"
  ],

  "experiment_apis": {
    "proxyutils": {
      "schema": "experiments/proxyutils/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiments/proxyutils/api.js",
        "paths": [["experiments", "proxyutils"]]
      }
    }
  },

  "background": {
      "scripts": [
        "vendor/fxa-crypto-relier.js",
        "commons.js",
        "survey.js",
        "background.js"
      ]
  }
}
