{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "default_locale": "en_US",
  "version": "1.0.0",
  "author": "Mozilla Developers",
  "applications": {
    "gecko": {
      "id": "secure-proxy@mozilla.com",
      "strict_min_version": "68.0"
    }
  },

  "description": "",
  "browser_action": {
    "browser_style": true,
    "default_icon": "img/indeterminate.png",
    "default_title": "Secure proxy",
    "default_popup": "popup.html"
  },

  "incognito": "spanning",

  "permissions": [
      "<all_urls>",
      "browsingData",
      "contextualIdentities",
      "cookies",
      "identity",
      "management",
      "storage",
      "tabs",
      "webRequestBlocking",
      "webRequest",
      "proxy",
      "webNavigation"
  ],

  "experiment_apis": {
    "proxyutils": {
      "schema": "experiments/proxyutils/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "experiments/proxyutils/api.js",
        "paths": [["experiments", "proxyutils"]]
      }
    }
  },

  "background": {
      "scripts": [
        "vendor/fxa-crypto-relier.js",
        "commons.js",
        "background.js"
      ]
  }
}
